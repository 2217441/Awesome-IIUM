---
// Leaderboard.astro
---

<div id="leaderboard" class="not-content">
  <div class="leaderboard-container">
    <div id="contributor-list" class="contributor-list">
      <div class="loading">Loading top contributors...</div>
    </div>
  </div>
</div>

<script>
  async function fetchContributors() {
    try {
      const response = await fetch('https://api.github.com/repos/iiumstudent/Awesome-IIUM/contributors?per_page=12');
      const data = await response.json();
      const list = document.getElementById('contributor-list');
      if (!list) return;
      
      list.innerHTML = ''; // Clear loading message

      data.forEach((user, index) => {
        // Basic URL validation
        try {
          const profileUrl = new URL(user.html_url);
          const avatarUrl = new URL(user.avatar_url);
          if (profileUrl.protocol !== 'https:' || avatarUrl.protocol !== 'https:') return;
        } catch {
          return;
        }

        const link = document.createElement('a');
        link.href = user.html_url;
        link.target = '_blank';
        link.rel = 'noopener noreferrer';
        link.className = `contributor-card rank-${index + 1}`;

        const rankDiv = document.createElement('div');
        rankDiv.className = 'rank';
        rankDiv.textContent = `#${index + 1}`;
        link.appendChild(rankDiv);

        const img = document.createElement('img');
        img.src = user.avatar_url;
        img.alt = user.login;
        img.className = 'avatar';
        link.appendChild(img);

        const infoDiv = document.createElement('div');
        infoDiv.className = 'info';

        const usernameSpan = document.createElement('span');
        usernameSpan.className = 'username';
        usernameSpan.textContent = user.login;
        infoDiv.appendChild(usernameSpan);

        const contributionsSpan = document.createElement('span');
        contributionsSpan.className = 'contributions';
        contributionsSpan.textContent = `${user.contributions} Contributions`;
        infoDiv.appendChild(contributionsSpan);

        link.appendChild(infoDiv);
        list.appendChild(link);
      });
    } catch (e) {
      console.error('Failed to fetch contributors', e);
      const list = document.getElementById('contributor-list');
      if (list) {
        list.textContent = 'Failed to load contributors.';
        list.style.textAlign = 'center';
        list.style.color = 'var(--sl-color-gray-3)';
      }
    }
  }

  fetchContributors();
</script>

<style>
  .contributor-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }
  .contributor-card {
    display: flex;
    align-items: center;
    gap: 12px;
    background: var(--sl-color-bg-nav);
    padding: 1rem;
    border-radius: 12px;
    border: 1px solid var(--sl-color-hairline-light);
    text-decoration: none !important;
    color: inherit !important;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .contributor-card:hover {
    transform: scale(1.03);
    border-color: var(--sl-color-accent);
    background: var(--sl-color-accent-low);
  }
  .rank {
    font-weight: 800;
    font-size: 1.1rem;
    color: var(--sl-color-gray-3);
    min-width: 30px;
  }
  .rank-1 .rank { color: #facc15; } /* Gold */
  .rank-2 .rank { color: #94a3b8; } /* Silver */
  .rank-3 .rank { color: #b45309; } /* Bronze */
  
  .avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    border: 2px solid var(--sl-color-hairline-light);
  }
  .info {
    display: flex;
    flex-direction: column;
  }
  .username {
    font-weight: 600;
    font-size: 0.95rem;
  }
  .contributions {
    font-size: 0.8rem;
    color: var(--sl-color-gray-3);
  }
  .loading {
    grid-column: 1 / -1;
    text-align: center;
    padding: 2rem;
  }
</style>
